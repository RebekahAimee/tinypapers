#: import ListItemButton kivy.uix.listview.ListItemButton
#: import main main
#: import ListAdapter kivy.adapters.listadapter.ListAdapter

TinypapersWindowManager:
#version 0.0.2

<TinypapersWindowManager>:
    # inherits from BoxLayout
    MainPage
    # which inherits from BasicListPage, so basically it just shows the latter

<BasicListPage>:
    # inherits from BoxLayout
    orientation: "vertical"
    
    #ROW 1 (HEADER)
    BoxLayout:
        size_hint_y: 15
        Button:
            background_normal: ""
            background_color: 0, .36, .60, 1
            text: "tinypapers"
            color: .76, .07, .22, 1
            size_hint_x: 70
            bold: True
            #(!) make the tinypapers text larger
            #(!) make it link back to main
        #(!) add back button here, give it size_hint 30 or so
    
    #ROW 2
    BoxLayout:
        size_hint_y: 85
        canvas.before:
            Color:
                rgb: .70, .80, .83
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            # left margin
            size_hint_x: 5
        ButtonList:
            # main scrollable content
            size_hint_x: 90
        Label:
            # right margin
            size_hint_x: 5

<MainPage>:
    #inherits from BasicListPage
    #nothing here, basically just pass

<ButtonList>:
    # Inherits from ScrollView
    scroll_y: 1
    do_scroll_x: False
    ListView:
        # ListView is experimental. Maybe it's the problem here.
        # this will later need an adapter, not a sample list.
        ItemButton:
            text: "text"
        ItemButton:
            text: "text2"

<ItemButton>:
    # Inherits from ListItemButton
    # These are the buttons that show up in ButtonLists. They'll take up
    # a lot of screen space, so it's important that they look nice.
    background_normal: ""
    background_color: .45, .86, .92, 1
    size_hint_y: None
    










